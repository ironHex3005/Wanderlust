<%- layout('layouts/boilerplate.ejs') %>

<form
  method="POST"
  action="/listings/<%=listing._id%>?_method=PATCH"
  class="needs-validation"
  novalidate
  enctype="multipart/form-data"
>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Create a New Listing</h2>
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input
          name="listing[title]"
          type="text"
          class="form-control"
          value="<%=listing.title%>"
          required
        />
        <div class="invalid-feedback">Title Required</div>
      </div>
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea
          name="listing[description]"
          type="text"
          class="form-control"
          required
        >
<%=listing.description%></textarea
        >
        <div class="invalid-feedback">Description Required</div>
      </div>

      <div class="mb-3">
        <img src="<%= originalImageUrl%>" alt="preiview" />
      </div>

      <div class="mb-3">
        <div class="mb-3">
          <label class="form-label">Upload Listing Image </label>
          <input name="listing[img]" type="file" class="form-control" />
        </div>
        <div class="invalid-feedback">Image Link Required</div>
      </div>
      <div class="mb-3">
        <label class="form-label">Price</label>
        <input
          name="listing[price]"
          type="text"
          class="form-control"
          value="<%=listing.price%>"
          required
        />
        <div class="invalid-feedback">Price Required</div>
      </div>
      <div class="row">
        <div class="mb-3 col-6">
          <label class="form-label">Location</label>
          <input
            name="listing[location]"
            type="text"
            class="form-control"
            value="<%=listing.location%>"
            required
          />
          <div class="invalid-feedback">Location Required</div>
        </div>
        <div class="mb-3 col-6">
          <label class="form-label">Country</label>
          <input
            name="listing[country]"
            type="text"
            class="form-control"
            value="<%=listing.country%>"
            required
          />
          <div class="invalid-feedback">Country Required</div>
        </div>

        <div class="mt-5">
          <button class="btn btn-dark add-btn">Edit</button>
        </div>
      </div>
    </div>
  </div>
</form>
